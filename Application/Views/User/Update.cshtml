@model UserUpdateViewModel

<div class="panel">
	<form asp-controller="User" asp-action="update" method="POST">
		<div class="row">
			<div class="form-group col-md-6">
				<label class="form-control-label" for="name">Nome</label>
				<input asp-for="Name" type="text" class="form-control" id="name" name="name" placeholder="Nome">
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group col-md-6">
				<label class="form-control-label" for="email">Email</label>
				<input asp-for="Email" type="email" class="form-control" id="email" name="email" placeholder="Email">
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
		</div>

		<div class="row">

			<div class="form-group col-md-6">
				<label class="form-control-label" for="cpf">CPF</label>
				<input asp-for="Cpf" type="text" class="form-control" id="cpf" name="cpd" placeholder="CPF">
				<span asp-validation-for="Cpf" class="text-danger"></span>
			</div>
			<div class="form-group col-md-6">
				<label class="form-control-label" for="phone">Telefone</label>
				<input asp-for="Phone" type="email" class="form-control" id="phone" name="phone" placeholder="Telefone">
				<span asp-validation-for="Phone" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<button type="button" class="btn btn-primary">Editar</button>
		</div>
	</form>
</div>
@using Entra21.CSharp.Area21.Service.ViewModels.Guards
@model GuardRegisterViewModel

<h3 class="h3">Cadastro do Guarda</h3>

<form asp-action="Register" method="POST">
    @*<input id="cadastroGuardaModalId" class="form-control" type="hidden" />*@

    <div class="mb-3">
        <label asp-for="Name" class="form-label" span-required=""></label>
        <input asp-for="fullName" class="form-control" />
        <span asp-validation-for="fullName" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-6">
            <label for="cadastroGuardaModalCpf" class="form-label">CPF <span class="text-danger">*</span></label>
            <input type="number" id="cadastroGuardaModalCpf" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label for="cadastroGuardaModalNumeroIdentificacao" class="form-label">Número de Identificação <span class="text-danger">*</span></label>
            <input type="number" id="cadastroGuardaModalNumeroIdentificacao" class="form-control" />
        </div>
    </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="fa-solid fa-xmark"></i> Cancelar</button>
        <button type="button" class="btn btn-primary" id="cadastroGuardaModalSalvar"><i class="fa-solid fa-floppy-disk"></i> Cadastrar</button>
    </div>
</form>

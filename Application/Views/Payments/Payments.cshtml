@model List<Vehicle>

<table class="table table-striped table-bordered table-hover" id="vehicles-id">
    <thead>
        <tr>
            <th>Modelo</th>
            <th>Placa</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicles in Model)
        {
            <tr>
                <td>@vehicles.Model</td>
                <td>@vehicles.LicensePlate</td>
                <td>
                <a class="btn btn-animate mb-2 btn-animate-side btn-primary" asp-action="pagar">
                    <i class="icon wb-shopping-cart" aria-hidden="true"></i>Pagar
                </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="page">
    <div class="page-content">
        <div class="row mb-3">
            <div class="text-end">
                <a class="btn btn-animate mb-2 btn-animate-side btn-primary" asp-action="pagar">
                    <i class="icon wb-shopping-cart" aria-hidden="true"></i>Pagar
                </a>
            </div>
        </div>
    </div>
</div>
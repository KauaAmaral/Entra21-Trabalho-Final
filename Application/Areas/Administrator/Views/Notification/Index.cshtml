@model List<Notification>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-striped display nowrap" id="table-notification-adm">
                <thead>
                    <tr>
                        <th style="width:15%"><font size="5"><b><font>Placa Veículo</font></b></th>
                        <th style="width:15%"><font size="5"><b><font>Guarda</font></b></th>
                        <th style="width:15%"><font size="5"><b><font>Rua</font></b></th>
                        <th style="width:15%"><font size="5"><b><font>Comentários</font></b></th>
                        <th style="width:15%"><font size="5"><b><font>Horário</font></b></th>
                        <th style="width:15%"><font size="5"><b><font>Ação</font></b></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var notification in Model)
                    {
                        <tr>
                            <td>@notification.VehicleLicensePlate</td>
                            <td>@notification.Guard.IdentificationNumber </td>
                            <td>@notification.Address</td>
                            <td>@notification.Comments</td>
                            <td>@notification.CreatedAt</td>

                            <td>
                                <a class="btn btn-primary" asp-action="Update" asp-route-id="@notification.Id">
                                    <i class="fa-solid fa-pencil"></i> Editar
                                </a>
                                <a class="btn btn-outline-danger" asp-action="delete" asp-route-id="@notification.Id">
                                    <i class="fa-solid fa-trash"></i> Apagar
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/Administrator/Notification/administrator-notification-datatable.js"></script>
 }
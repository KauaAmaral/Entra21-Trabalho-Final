@model Payment;


<div class="modal" id="detailsPayments">
    <div class="modal-dialog modal-simple">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Detalhes de pagamento</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="User.Name" class="form-label">Nome</label>
                        <input asp-for="User.Name" class="form-control" />
                    </div>
                    <div class="col-6">
                        <label asp-for="User.Cpf" class="form-label">Cpf</label>
                        <input asp-for="User.Cpf" class="form-control"></>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <label asp-for="User.Email" class="form-label">E-mail</label>
                        <input asp-for="User.Email" class="form-control" />
                    </div>
                    <div class="col-6">
                        <label asp-for="User.Phone" class="form-label">Fone</label>
                        <input asp-for="User.Phone" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Vehicle.Model" class="form-label">Modelo do Veiculo</label>
                        <input asp-for="Vehicle.Model" class="form-control" />
                    </div>
                    <div class="col-6">
                        <label asp-for="Vehicle.LicensePlate" class="form-label">Placa do Veiculo</label>
                        <input asp-for="Vehicle.LicensePlate" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label asp-for="TransactionId" class="form-label">Id da Transação</label>
                        <input asp-for="TransactionId" class="form-control" />
                    </div>
                    <div class="col-6">
                        <label asp-for="Value" class="form-label">Valor Pago</label>
                        <input asp-for="Value" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <label asp-for="PayerId" class="form-label">Id do Pagador</label>
                        <input asp-for="PayerId" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
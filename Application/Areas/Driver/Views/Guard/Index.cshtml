@model List<Guard>

<p class="h1">Lista de Guardas</p>

<div class="row mb-3">
    <div class="text-end">
        <a asp-action="register" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Cadastrar
        </a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Número de identificação</th>
            <th>Nome</th>
            <th>CPF</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var guard in Model)
        {
            <tr>
                <td>@guard.IdentificationNumber</td>
                <td>@guard.User.Name</td>   
                <td>@guard.User.Cpf</td>
            </tr>
        }
    </tbody>
</table>
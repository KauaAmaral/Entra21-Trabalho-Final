@model List<Vehicle>

<div class="row mb-3">
    <div class="text-end">
        <a asp-action="Register" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Cadastrar
        </a>
    </div>
</div>

<table class="table table-striped table-bordered table-hover" id=vehicles.id>
    <thead>
    <!-- Cabeçalho da tabela-->
    <tr>
        <!-- Linha da tabela-->
        <th>Nome</th> <!-- Coluna específica do cabeçalho-->
        <th>Descrição</th>
        <th>Tipo Veículo</th>
        <th>Ação</th>
    </tr>
    </thead>
    <tbody>
    <!-- Lugar dos registros da tabela-->
    @foreach (var vehicles in Model)
    {
        <tr>
            <!-- Linha-->
            <td>@vehicles.LicensePlate</td> <!-- Coluna específica para body-->
            <td>@vehicles.Model</td>
            <td>@vehicles.Type</td>
           <td>
                <a class="btn btn-primary" asp-action="update" asp-route-id="@vehicles.Id">
                    <i class="fa-solid fa-pencil"></i> Editar
                </a>
                <a class="btn btn-outline-danger" asp-action="delete" asp-route-id="@vehicles.Id">
                    <i class="fa-solid fa-trash"></i> Apagar
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
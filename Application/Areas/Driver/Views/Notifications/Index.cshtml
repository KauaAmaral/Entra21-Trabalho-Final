@model List<Notification>

<p class="h3">Notificações</p>

<div class="row mb-3">
    <div class="text-end">
        <a asp-action="register" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Criar Notificação
        </a>
    </div>
</div>

<table class="table table-striped table-bordered" id="notification-table">
    <thead>
        <tr>
            <th>Placa Veículo</th>
            <th>Usuário</th> 
            <th>Guarda</th>
            <th>Comentários</th>
            <th>Horário</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var notification in Model)
        {
            <tr>
                <td>@notification.Vehicle.LicensePlate</td>
                <td>@notification.Vehicle.User</td>
                <td>@notification.Guard</td>
                <td>@notification.Comments</td>
                <td>@notification.CreatedAt</td>
            </tr>
        }
    </tbody>
</table>
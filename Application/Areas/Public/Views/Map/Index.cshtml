@{
    Layout = "/Areas/Public/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<body>

    <h1>My First Google Map</h1>

    <div id="googleMap" style="width:100%;height:400px;"></div>


    @section Scripts {
        <script>
            $(document).ready(function () {
                debugger;
                getLocation();
            });

            function getLocation() {
                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition(myMap);
                }
            }

            function myMap(position) {
                let latitude = position.coords.latitude;
                let longitude = position.coords.longitude;

                const uluru = { lat: -26.9139878, lng: -49.0716194 };

                var mapProp = {
                    center: new google.maps.LatLng(uluru),
                    zoom: 15,
                };


                var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);

                const marker = new google.maps.Marker({
                    position: uluru,
                    map: map,
                });

            }

        </script>

        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDl5EjVV5roMTtLPWNS6wpEh4GaGVRnpJU&callback=myMap"></script>
    }
    </body>
    </html>
@model UserLoginViewModel
@{
    ViewData["Title"] = "Login";
}

<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                <form asp-action="Login" asp-controller="login" method="POST" class="login100-form validate-form">
                    <span class="login100-form-title p-b-49">
                        Login
                    </span>
                    <div class="wrap-input100 validate-input m-b-23" data-plugin="formMaterial">
                        <span class="label-input100">E-Mail</span>
                        <input asp-for="Email" type="email" class="input100" name="email" placeholder="Escreva seu E-Mail">
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <span class="label-input100">Senha</span>
                        <input asp-for="Password" type="password" class="input100" name="password" placeholder="Escreva sua senha">
                    </div>
                    <div class="text-right p-t-8 p-b-31"></div>
                    @if (TempData["Message"] != null)
                    {
                        <p class="text-danger">@TempData["Message"]</p>
                    }
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button type="submit" class="login100-form-btn">
                                Entrar
                            </button>
                        </div>
                    </div>
                    <div class="flex-col-c p-t-50">
                        <span class="txt1 p-b-17">
                            Você não tem uma conta?
                        </span>
                        <a class="txt2" asp-controller="Login" asp-action="Register">Cadastre-se</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
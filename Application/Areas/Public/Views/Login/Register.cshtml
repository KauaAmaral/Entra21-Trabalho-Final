@model UserRegisterViewModel

@{
	ViewData["Title"] = "Cadastrar";
}

<div class="page background-image vertical-align text-center">
	<div class="page-content vertical-align-middle">
		<div class="panel">
			<div class="panel-body">
				<form asp-controller="Login" asp-action="Register" method="POST">
					
					<div class="form-group form-material floating" data-plugin="formMaterial">
						<input asp-for="Email" type="email" class="form-control" />
						<label asp-for="Email" class="floating-label"></label>
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>

					<div class="form-group form-material floating" data-plugin="formMaterial">
						<input asp-for="Name" type="text" class="form-control" />
						<label asp-for="Name" class="floating-label"></label>
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>	
					
					<div class="form-group form-material floating" data-plugin="formMaterial">
						<input asp-for="Cpf" type="text" class="form-control" />
						<label asp-for="Cpf" class="floating-label"></label>
						<span asp-validation-for="Cpf" class="text-danger"></span>
					</div>
														
					<div class="form-group form-material floating" data-plugin="formMaterial">
						<input asp-for="Password" type="password" class="form-control" />
						<label asp-for="Password" class="floating-label"></label>
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					
					<div class="form-group form-material floating" data-plugin="formMaterial">
						<input asp-for="ConfirmPassword" type="password" class="form-control" />
						<label asp-for="ConfirmPassword" class="floating-label"></label>
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					</div>
					@if(TempData["Message"] != null)
					{
						<p class="text-danger">@TempData["Message"]</p>
					}
					<button type="submit" class="btn btn-primary btn-block btn-lg mt-40">Criar conta</button>
				</form>
				<Por>Já tem conta? <a asp-controller="Login" asp-action="login">Entre aqui</a><p>
			</div>
		</div>
	</div>
</div>




@model UserRegisterViewModel
@{
    ViewData["Title"] = "Cadastrar";
}

<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                <form asp-action="Login" asp-controller="login" method="POST" class="login100-form validate-form">
                    <span class="login100-form-title p-b-49">
                        Entrar
                    </span>
                    <div class="wrap-input100 validate-input m-b-23" data-plugin="formMaterial">
                        <span class="label-input100">E-Mail</span>
                        <input asp-for="Email" type="email" class="input100" name="email" placeholder="Escreva seu E-Mail">
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <span class="label-input100">Senha</span>
                        <input asp-for="Password" type="password" class="input100" name="password" placeholder="Escreva sua senha">
                    </div>
                    <div class="text-right p-t-8 p-b-31"></div>
                    @if (TempData["Message"] != null)
                    {
                        <p class="text-danger">@TempData["Message"]</p>
                    }
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button type="submit" class="login100-form-btn">
                                Continuar
                            </button>
                        </div>
                    </div>
                    <div class="flex-col-c p-t-50">
                        <span class="txt1 p-b-17">
                            Novo usuário?
                        </span>
                        <a class="txt2" asp-controller="Login" asp-action="Register">Crie uma conta</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
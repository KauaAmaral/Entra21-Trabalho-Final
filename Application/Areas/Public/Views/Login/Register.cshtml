@model UserRegisterViewModel
@{
    ViewData["Title"] = "Cadastrar";
}

<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/homeScreen.jpg');">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                <form asp-action="Register" asp-controller="login" method="POST" class="login100-form validate-form">
                    <span class="login100-form-title p-b-49">
                        Criar uma conta
                    </span>
                    <div class="wrap-input100 m-b-23" data-plugin="formMaterial">
                        <span class="label-input100">E-Mail</span>
                        <input asp-for="Email" type="email" class="input100" name="email" placeholder="Escreva seu E-Mail">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 m-b-23" data-plugin="formMaterial">
                        <span class="label-input100">Nome completo</span>
                        <input asp-for="Name" type="text" class="input100" name="name" placeholder="Escreva seu nome completo">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 m-b-23" data-plugin="formMaterial">
                        <span class="label-input100">CPF</span>
                        <input asp-for="Cpf" type="text" class="input100" name="cpf" placeholder="Escreva seu CPF">
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 m-b-23" data-plugin="formMaterial">
                        <span class="label-input100">Senha</span>
                        <input asp-for="Password" type="password" class="input100" name="password" placeholder="Escreva sua senha">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 m-b-23" data-plugin="formMaterial">
                        <span class="label-input100">Confirmar senha</span>
                        <input asp-for="ConfirmPassword" type="password" class="input100" name="confirmPassword" placeholder="Confirme sua senha">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="text-right p-t-8 p-b-31"></div>
                    @if (TempData["Message"] != null)
                    {
                        <p class="text-danger">@TempData["Message"]</p>
                    }
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button type="submit" class="login100-form-btn">
                                Continuar
                            </button>
                        </div>
                    </div>
                    <div class="flex-col-c p-t-50">
                        <span class="txt1 p-b-17">
                            Ja tem uma conta?
                        </span>
                        <a class="txt2" asp-controller="Login" asp-action="login">Entrar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>*@